name: 增强流媒体检测(独立面板)
desc: 独立显示5个流媒体服务的解锁状态。需配合更新后的脚本使用。
author: xiaomingyve1
update-url: https://github.com/xiaomingyve1/stash
enable: true

# 将5个检测项注册到“第三方服务”面板
panel-items:
  - script: check-netflix
  - script: check-disney
  - script: check-youtube
  - script: check-chatgpt
  - script: check-tiktok

script-providers:
  check-netflix:
    url: https://raw.githubusercontent.com/xiaomingyve1/stash/main/script/media-detection.js
    interval: 300
    schedule: [manual, network-change]
    no-cache: true
    argument: "Netflix"

  check-disney:
    url: https://raw.githubusercontent.com/xiaomingyve1/stash/main/script/media-detection.js
    interval: 300
    schedule: [manual, network-change]
    no-cache: true
    argument: "Disney"

  check-youtube:
    url: https://raw.githubusercontent.com/xiaomingyve1/stash/main/script/media-detection.js
    interval: 300
    schedule: [manual, network-change]
    no-cache: true
    argument: "YouTube"

  check-chatgpt:
    url: https://raw.githubusercontent.com/xiaomingyve1/stash/main/script/media-detection.js
    interval: 300
    schedule: [manual, network-change]
    no-cache: true
    argument: "ChatGPT"

  check-tiktok:
    url: https://raw.githubusercontent.com/xiaomingyve1/stash/main/script/media-detection.js
    interval: 300
    schedule: [manual, network-change]
    no-cache: true
    argument: "TikTok"
